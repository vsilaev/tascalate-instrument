<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>multi-release-jar</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>*:net.tascalate.instrument.spi:*</include>
			</includes>
			<outputDirectory>/</outputDirectory>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>true</unpack>
			<scope>compile</scope>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:net.tascalate.instrument.spi8</include>
			</includes>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>			
			<scope>runtime</scope>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:net.tascalate.instrument.spi9</include>
			</includes>
			<outputDirectory>/META-INF/versions/9</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>META-INF/**</exclude>
					<exclude>**/ClassDefiner.class</exclude>
					<exclude>**/EmptyClassDefiners.class</exclude>				
				</excludes>
			</unpackOptions>
			<scope>runtime</scope>
			<useTransitiveDependencies>false</useTransitiveDependencies>
		</dependencySet>
	</dependencySets>
</assembly>